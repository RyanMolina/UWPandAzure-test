<Page
    x:Class="AppAdmin.LogInPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppAdmin"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

        <StackPanel Name="signIn" RelativePanel.AlignHorizontalCenterWithPanel="True">
            <TextBox Margin="5" Background="White" Name="username"  PlaceholderText="Username"/>
            <PasswordBox Margin="5" Background="White" Name="password" PlaceholderText="Password"  />
            <HyperlinkButton Name="forgotPassword" Click="forgotPassword_Click" Margin="5" Padding="0" Content="Forgot Password" />
            <Button HorizontalAlignment="Right" Margin="5" Name="signInBtn" BorderBrush="Gray" Background="DarkOrange" Click="Button_Click" Content="Sign In"/>
            <ProgressRing Foreground="Black" Height="100" Width="100" Name="progressRing" />
        </StackPanel>

</Page>
